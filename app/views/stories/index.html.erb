<div class="story-container">
  <h4><%= image_tag 'logo.svg' %>news</h4>
  <% @stories.each_with_index do |story, idx| %>
    <div class="story">
      <%= link_to "#{idx + 1}. #{story.title}", story_path(story.id) %>
      <div class="info">by: <%= story.by %> | <%= story.score %> points | <%= story.descendants %> comments</div>
    </div>
  <% end %>
</div>
